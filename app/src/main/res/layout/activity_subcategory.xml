<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:gravity="center">

            <com.github.andreilisun.circular_layout.CircularLayout
                android:id="@+id/layout_circular"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="@dimen/_245sdp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/txtRefresh1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:text="Refresh"
                    android:textColor="@color/black"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:rotation="45"
                    android:text="Refresh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:text="Refresh"
                    android:rotation="-90"
                    android:textColor="@color/black"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:rotation="-45"
                    android:text="Refresh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:text="Refresh"
                    android:textColor="@color/black"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:rotation="45"
                    android:text="Refresh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:text="Refresh"
                    android:rotation="90"
                    android:textColor="@color/black"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtRefresh8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crpv"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:rotation="-45"
                    android:text="Refresh"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="invisible" />

            </com.github.andreilisun.circular_layout.CircularLayout>

            <com.timqi.sectorprogressview.SectorProgressView
                android:id="@+id/progressBar_Chart"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="@dimen/_245sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_60sdp"
                app:bgColor="@color/colorPrimary"
                app:fgColor="@color/colorPrimaryDark"
                app:percent="33"
                app:startAngle="0"
                app:strokeWidth="21dp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSubCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="-25dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtNoDataFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/no_data_found"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:visibility="gone" />
    </LinearLayout>
</layout><!-- if 4 texts then 4 x 2 texts will be added --><!-- if 4 texts then 4 x 2 texts will be added -->