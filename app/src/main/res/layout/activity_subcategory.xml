<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.timqi.sectorprogressview.SectorProgressView
            android:id="@+id/crpv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_50sdp"
            app:bgColor="@color/colorPrimaryDark"
            app:fgColor="@color/colorPrimary"
            app:percent="25"
            app:startAngle="0"
            app:strokeWidth="21dp" />

        <com.github.andreilisun.circular_layout.CircularLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txtRefresh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:text="Refresh"
                android:textColor="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtRefresh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:rotation="45"
                android:text="Refresh"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtRefresh3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:text="Refresh"
                android:textColor="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtRefresh4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:rotation="-45"
                android:text="Refresh"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtRefresh5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:text="Refresh"
                android:textColor="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtRefresh6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:rotation="45"
                android:text="Refresh"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtRefresh7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:text="Refresh"
                android:textColor="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtRefresh8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crpv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_10sdp"
                android:rotation="-45"
                android:text="Refresh"
                android:textColor="@color/black" />

        </com.github.andreilisun.circular_layout.CircularLayout>

        <TextView
            android:id="@+id/txtRefresh"
            android:background="@color/bg_notification_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crpv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:text="Refresh"
            android:textColor="@color/white"
            android:visibility="visible" />
    </RelativeLayout>
</layout>
