<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llItemRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlMenuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_menu2"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:id="@+id/rlMenuImg"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp">
                <!--android:background="@drawable/bg_notification_date"-->

                <ImageView
                    android:id="@+id/imgMenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_menu_home" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_toRightOf="@+id/rlMenuImg"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

    </LinearLayout>
</layout>